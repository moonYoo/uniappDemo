{
  "singleQuote": true,
  "semi": false,
  "tabWidth": 4,
  "bracketSpacing": true,
  "arrowParens": "always",
  "trailingComma": "none",
  "overrides": [
      {
          "files": "src/**/*.ts",
          "options": {
              "parser": "typescript"
          }
      },
      {
          "files": "src/**/*.scss",
          "options": {
              "singleQuote": false,
              "semi": true
          }
      }
  ]
}
